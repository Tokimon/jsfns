{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["esnext"],
    "target": "esnext",

    "baseUrl": "./",
    "paths": {
      "~/*": ["./scripts/*"]
    }
  }
}
