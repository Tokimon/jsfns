<style>
  :root {
    --focus-color: #58b29a;
    --hover-color: darkolivegreen;
    --border-color: #444;
    --module-bg-color: #192229;
    --header-color: #212d36;
  }

  table {
    table-layout: auto;
    border-collapse: collapse;

    & th,
    & td {
      text-align: left;
      padding: 5px 10px;
      border: 0 solid var(--border-color);
      border-width: 0 0 1px;

      & + & {
        border-left-width: 1px;
      }
    }

    & tbody tr:last-child {
      & th,
      & td {
        border-bottom: 0;
      }
    }
  }

  details[open] summary {
    margin-bottom: 5px;
  }

  details pre code.hljs {
    background-color: #1c2431;
    box-shadow: inset #141a24 0 0 5px;
  }

  summary {
    font-size: 12px;
    cursor: pointer;
    color: gray;
    transition: color 0.2s;

    &:hover,
    &:focus {
      color: #cc7000;
      outline: none;
    }
  }

  pre code.hljs {
    padding: 15px;
  }

  code:not(.hljs) {
    color: hotpink;
  }

  code a {
    color: inherit;
    text-decoration: none;

    &:hover,
    &:focus {
      text-decoration: underline;
    }
  }

  .hljs-attr[title] {
    cursor: help;
  }

  [data-custom-type] {
    cursor: default;
  }

  .page {
    --header-hight: 50px;

    grid-template-areas:
      'header header'
      'nav content';
    grid-template-columns: 300px 1fr;
  }

  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 99;
    background-color: var(--header-color);
    color: white;
    padding: 0 10px;
    grid-area: header;
    height: var(--header-hight);
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .page-title {
    margin: 0;
    font-size: 18px;
    flex: 1 1 100%;
    display: flex;
    gap: 10px;
    align-items: center;

    & a {
      color: currentColor;
      text-decoration: none;
      padding: 5px 10px;
      border: 1px solid var(--border-color);
      transition: background-color 0.2s;
      border-radius: 4px;

      &:hover,
      &:focus,
      &.selected {
        background: var(--focus-color);
      }
    }
  }

  .page-version {
    white-space: nowrap;
  }

  .modules {
    grid-area: content;
    padding: 0 15px var(--header-hight);
    overflow: hidden;
    position: relative;
    z-index: 9;
    container-type: inline-size;
  }

  .menu-trigger {
    width: 22px;
    height: 16px;
    border: 0;
    background: white linear-gradient(transparent, transparent 25%, var(--header-color) 25%, var(--header-color));
    background-repeat: repeat;
    background-size: 1px 7px;
    appearance: none;
    cursor: pointer;
    transition: background-color 0.2s;

    &:hover {
      background-color: var(--hover-color);
    }

    &:focus {
      outline: none;
      background-color: var(--focus-color);
    }
  }

  .menu-trigger,
  .repository {
    flex: 0 0 auto;
  }

  .repository img {
    width: 20px;
    aspect-ratio: 1;
  }

  @media (min-width: 800px) {
    .page {
      display: grid;
    }

    .menu-trigger {
      display: none;
    }
  }

  .menu {
    grid-area: nav;
    display: flex;
    flex-direction: column;
    position: fixed;
    z-index: 98;
    width: 300px;
    top: var(--header-hight);
    bottom: 0;
    left: 0;
    background: var(--module-bg-color);
    translate: -100% 0;
    transition: translate 0.3s ease;
    font-size: 18px;

    &.open {
      translate: 0;
    }
  }

  .menu-list {
    margin: 0;
    padding: 0;
    list-style: none;
    padding: 10px 0;
    box-shadow: inset 0 0 0 transparent;
    overflow-y: auto;
    overflow-x: hidden;
  }

  .menu-list-item {
    & a {
      color: #ccc;
      text-decoration: none;
      padding: 10px;
      display: block;
      transition: all 0.2s;

      &:hover,
      &:focus {
        background: rgba(255, 255, 255, 0.15);
        outline: none;
      }
    }

    &.current a {
      background: rgba(122, 150, 174, 0.25);
      box-shadow: inset 5px 0 0 var(--focus-color);
      padding-left: 20px;
    }
  }

  .menu-search {
    border-radius: 4px;
    padding: 10px;
    font-size: 14px;
    border: 1px solid var(--border-color);
    background-color: transparent;
    color: white;
    margin: 10px;
    transition: border 0.2s;

    &::-webkit-search-cancel-button {
      appearance: none;
      -webkit-mask-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='%23777'><path d='M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z'/></svg>");
      background-color: var(--focus-color);
      background-size: 100%;
      height: 20px;
      width: 20px;
      cursor: pointer;
    }

    &:focus {
      outline: none;
      border-color: var(--focus-color);
    }
  }

  @media (min-width: 800px) {
    .menu {
      translate: 0;
    }
  }

  .module {
    padding-top: var(--header-hight);

    &:target {
      .module-content,
      .module-content:hover {
        box-shadow: 0 0 3px 1px var(--focus-color);
      }
    }
  }

  .module-content {
    background: var(--module-bg-color);
    border-radius: 5px;
    margin-top: 15px;
    transition: box-shadow 1s;

    &:hover {
      box-shadow: 0 0 3px 1px var(--hover-color);
      transition: box-shadow 0.2s;
    }

    & h1 {
      margin: 0;
      padding: 0 15px;
      line-height: 50px;
      font-size: 18px;
      font-weight: 400;
      border-top-left-radius: inherit;
      border-top-right-radius: inherit;

      & a {
        color: currentColor;
        text-decoration: none;

        &:hover,
        &:focus {
          & b {
            color: currentColor;
          }
        }
      }

      & b {
        color: gray;
        transition: color 0.2s;
      }
    }
  }

  @container (min-width: 600px) {
    .module-content h1 {
      font-size: 25px;
    }
  }

  .signatures {
    display: flex;
    flex-direction: column;
    gap: 15px;
    color: #aaa;
  }

  .signature-content {
    display: flex;
    flex-direction: column;
    gap: 15px;
    padding: 15px;
  }

  .signature-definition {
    font-size: 14px;
  }

  .signature-description {
    font-size: 18px;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .signature-remark {
    padding: 10px;
    border: #81644b solid;
    border-width: 1px 0;
    color: #808080;
    width: fit-content;

    & legend {
      text-transform: uppercase;
      color: #ffa657;
      font-size: 11px;
      padding: 0 7px;
    }
  }

  @container (min-width: 750px) {
    .signature-definition {
      font-size: 20px;
    }
  }

  .tooltip {
    display: none;
    border-radius: 5px;
    box-shadow: #1a1f23 0 4px 8px -2px;
    overflow: hidden;
    border: 1px solid #333;
    z-index: 99;
    position: absolute;

    &.show {
      display: block;
    }

    & code.hljs {
      background-color: #292d25;
    }
  }
</style>
